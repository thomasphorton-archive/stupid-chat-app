<!DOCTYPE html>
<html>
  <head>
    <title>Chat With Friends</title>
    <meta name="viewport" content="width=device-width,minimum-scale=1.0,maximum-scale=1.0,user-scalable=no" />
    <%- include /partials/head/css.ejs %>
    <%- include /partials/head/js.ejs %>
    <%- include /partials/head/analytics.ejs %>
    <script src='/socket.io/socket.io.js'></script>
    <script data-main="/js/main" src="/js/lib/require-min.js"></script>
    <script>
      window.channel = "<%= channel %>" || "Public Chat";
    </script>
  </head>

  <body>

    <%- include /partials/header.ejs %>
    <%- include /partials/alert.ejs %>

    <div class="container">

      <div class="row">
        <div id="content" class="col-md-7">
          <div id="chat"></div>
        </div>
        <div class="col-md-5">
          <h2 class="channel-name"></h2>
          <p><span class="users-online">1 user</span> online</p>
        </div>
      </div>

      <div class="row">
        <div class="controls col-md-12">

          <div class="form-group name-control-group">
            <label for="name">Name *</label>
            <button type="button" class="close name-clear" aria-hidden"true">&times;</button>
            <input id="name" class="form-control" />
          </div>

          <div class="form-group">
            <label for="field">Message</label>

            <div class="input-group">
              <input type="text" id="post-text-field" class="form-control message-field" placeholder="Enter a message">
              <span class="input-group-btn">
                <button class="btn btn-default btn-send-message" type="button">Send</button>
              </span>
            </div>

          </div>
        </div>
      </div>
    </div>
  <%- include /partials/footer.ejs %>
  </body>
</html>
